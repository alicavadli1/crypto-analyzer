{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/analyze.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron-analyze",
      "schedule": "*/3 * * * *"
    }
  ]
} 